.FileManager__main
	background-position center
	background-repeat no-repeat
.FileManager__isDesktop
	.FileManager__list
		@extend .full, .mt-0
	.FileManager__entry
		color #fff
		> *
			filter drop-shadow(0 1px 3px #000)
	.FileManager__viewIcons
		height 100%
		grid-template-rows repeat(auto-fill, minmax(80px, 1fr))
		grid-auto-columns 96px
		grid-template-columns unset
		grid-auto-rows unset
		grid-auto-flow column
		grid-gap 2px
.FileManager__viewIcons
	display grid
	grid-template-columns repeat(auto-fill, minmax(96px, 1fr))
	grid-auto-rows 80px
	.bp3-icon
		width 32px
		height 32px
		max-width 32px
		max-height 32px
		color #8a9ba8
	.FileManager__entry
		height 100%
		border-radius 0 !important
		display flex
		flex-direction column
		justify-content space-evenly
		align-items center
		text-align center
		> .bp3-icon
			margin 0
		> div
			width 100%
			flex-grow 0
