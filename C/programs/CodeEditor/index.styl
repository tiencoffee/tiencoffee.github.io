.CodeMirror
	height 100% !important
	font-family "EnvyCodeR", monospace !important
	filter saturate(1.5)
.CodeMirror-cursor
	height 20px !important
	border-left-width 2px !important
	transform translate(-50%, -1px)
.CodeMirror-linenumbers
	min-width 48px
.CodeMirror-measure + div
	filter drop-shadow(0 0 1px #000)
.cm-tab
	position relative
	&:after
		content ""
		position absolute
		left 1px
		top 50%
		right 2px
		height 1px
[role=presentation]
	.cm-tab
		border-left dotted 1px #8883
.bp3-tab
	color #fff !important
	&[aria-selected=true]
		box-shadow inset 0 2px 0 #2692d6 !important
