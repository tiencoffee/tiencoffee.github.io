	width 16px
	height 16px
	display inline-flex
	justify-content center
	align-items center
	font-size 16px

.desktop
	position absolute
	width 100%
	z-index 1

.taskbar
	position absolute
	width 100%
.taskbar-task-wrap
	display inline-grid !important
	grid-template-columns minmax(auto, 180px)
.taskbar-actions
	width 320px
	overflow hidden
.taskbar-action
	height 65px
	border-right solid 1px #8886
	border-bottom solid 1px #8886
	border-radius 0
	transform translate(1px, 1px)
	.bp3-icon
		margin 0

.top-layer
	pointer-events none
.night-light
	transition background .3s
	&[data-night-light=true]
		background #fc02
.brightness
	background #000
	transition opacity .3s

.scrollable
	position absolute
	width 100%
	height 100%
	overflow auto !important
	scroll-behavior smooth
.scrollable-x
	@extend .scrollable
	overflow-y hidden
.scrollable-y
	@extend .scrollable
	overflow-x hidden
.selectable
	user-select text !important
.full
	position absolute
	left 0
	top 0
	width 100%
	height 100%
.absolute
	position absolute
.relative
	position relative
.fixed
	position fixed
.overflow-hide
	overflow hidden
	clip-path inset(0 0 0 0)
.overflow-auto
	overflow auto
.overflow-clip
	overflow auto
	clip-path inset(0 0 0 0)
.nowrap
	white-space pre
.ellipsis
	white-space pre
	overflow hidden
	text-overflow ellipsis

.row
	display flex
	flex-wrap wrap
	&.reverse
		flex-direction row-reverse
	&.vertical
		flex-direction column
		flex-wrap nowrap
		&.reverse
			flex-direction column-reverse
	&.nowrap
		flex-wrap nowrap
.left
	justify-content flex-start
.center
	justify-content center
.right
	justify-content flex-end
.between
	justify-content space-between
.around
	justify-content space-around
.evenly
	justify-content space-evenly
.top
	align-items flex-start
.middle
	align-items center
.bottom
	align-items flex-end
.col
	flex-grow 1
for i in 0..12
	width = round(i / 12 * 100, 5)
	.row
		&:not(.vertical)
			.col-{i}
				width width ? (width)% : auto
			.offset-{i}
				margin-left (width)%
	.col-{i}
		flex-basis width ? (width)% : auto
	.z-{i}
		z-index i

for prop in padding margin
	p = substr(prop 0 1)
	for val, size in 0 2 5 10 20 50
		val = (val)px !important
		.{p}-{size}
			{prop} val
		.{p}t-{size}
			{prop}-top val
		.{p}r-{size}
			{prop}-right val
		.{p}b-{size}
			{prop}-bottom val
		.{p}l-{size}
			{prop}-left val
		.{p}x-{size}
			{prop}-left val
			{prop}-right val
		.{p}y-{size}
			{prop}-top val
			{prop}-bottom val
