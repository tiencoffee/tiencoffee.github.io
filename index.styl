	.bp3-dialog
		// background #293742
		background #30404d
	.bp3-dialog-body
		background-color #30404d
	.bp3-html-table
		td
			.bp3-icon
				color #bfccd6
	.bp3-html-table-sticky
		thead tr
			background #30404d

